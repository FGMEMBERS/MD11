 <consumables>
  <fuel>
   <tank n="0">
    <level-gal_us archive="y">1500</level-gal_us>
   </tank>
   <tank n="1">
    <level-gal_us archive="y">1500</level-gal_us>
   </tank>
  </fuel>
 </consumables>
